<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 ms-4">
            <%= image_tag("animatedhome.svg", size: "500x500") %>
        </div>
        <div class="col-md-6 mt-5">
            <div class="card text-black bg-warning mt-5 custom3">
              <h4 class="card-header text-decoration">Log-in</h4>
              <div class="mt-2">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group ms-2 custom7">
                  <p>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email Address", class: "form-control" %>
                  </p>
                </div>

                <div class="form-group ms-2 custom7">
                  <p>
                    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter Password", class: "form-control" %>
                  </p>
                </div>

                  <p class="ms-2">
                    <%= submit_tag("Log-in") %>
                  </p>
                <% end %> 
                  <p class="ms-2">
                    Doesn't have an account? <%= render "devise/shared/links" %>
                  </p>
              </div>
            </div>
            </div>
        </div>
    </div>
</div>

