<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-md-1 me-5">
      <%= render "partials/sidebar"%>
    </div>

    <div class="col-md-10 ms-3 mt-2">
      <div class="row">
        <% @categories.each do |category| %>
            <div class="col-md-3 mb-2 ms-0">
              <div class="card border-warning h-100">  
                <h4 class="card-header text-decoration"><%= category.name%></h4>
                <div class="card-body">
                <p class="card-title"><%= category.description.first(64)%></p> 
              </div>  
              <div class="card-body2 ms-3">
                  <a href="<%= edit_category_path(category) %>"><i class="fas fa-edit" 
                  data-toggle="tooltip" data-placement="bottom" title="Edit Project Details" 
                  style="font-size:16px"></i></a> 
                  <a href="<%= category_path(category) %>"><i class="fas fa-eye" 
                  data-toggle="tooltip" data-placement="bottom" title="View Project Details and Tasks" 
                  style="font-size:16px"></i></a>
                  <%= link_to category_path(category), method: :delete, data: { confirm: 'Are you sure?' } do %>
                                                <i class="fas fa-trash-alt" data-toggle="tooltip" 
                                                data-placement="bottom" title="Delete Project" 
                                                style="font-size:16px"></i><% end %>
                                                
              </div>  
            </div>
          </div>
          <% end %>
      </div><!-- row-->
    </div> <!-- col-10 -->
    <div class="col-md-1">
    </div>
  </div> <!-- row-->
</div> <!-- container-->
  



  