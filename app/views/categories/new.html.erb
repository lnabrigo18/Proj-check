<div class="d-inline-flex p-2">
  <div class="btn-group-vertical mt-2 ms-2 custom5">
    <a href="/categories/dashboard" class="btn btn-primary custom">Dashboard</a>
    <a href="#" class="btn btn-primary custom">Profile</a>
    <a href="/categories/new" class="btn btn-primary custom">Create Project</a>
    <a href="/categories" class="btn btn-primary custom">Projects</a>
  </div>

<div class="card text-black bg-warning ms-2 mt-2 mb-2 custom3">
  <h4 class="card-header text-decoration">Create A Project</h4>
  <div class="form-group mt-2 custom3">
    <%= form_with model: @category, local: true do |f| %>
      <p class="row custom4-5 ms-2">
        <%= f.text_field :name, placeholder: "Enter Project Title" %>
      </p>
      <p class="row custom4-5 ms-2">
        <%= f.text_area :description, placeholder: "Enter Project Description" %>
      </p>
      <p class="ms-2">
      <%= submit_tag("Create Project") %>
      </p>
    <% end %> 
  </div>
</div>