<div class="d-inline-flex p-2">
  <div class="btn-group-vertical mt-2 ms-2 custom5">
    <a href="/categories/dashboard" class="btn btn-primary custom">Dashboard</a>
    <a href="#" class="btn btn-primary custom">Profile</a>
    <a href="/categories/new" class="btn btn-primary custom">Create Project</a>
    <a href="/categories" class="btn btn-primary custom">Projects</a>
  </div>

  
    <div class="card border-warning ms-2 mt-2 mb-2 custom4-5">  
      <h4 class="card-header text-decoration"><%= @category.name %></h4>
    <div class="card-body">
      <p class="card-title"><%= @category.description%></p>
    </div>
    </div>

<div class="card text-black bg-white ms-2 mt-2 mb-2 custom6">
  <h4 class="card-header text-decoration">Add New Task</h4>
  <div class="form-group mt-2 custom4-5">
    <%= form_with scope: :task, model: [ @category, @task ], local: true do |f| %>
      <%= hidden_field_tag :category_id, @category.id %>
      <p class="row custom4-5 ms-2">
        <%= f.text_field :name, placeholder: "Enter Task Name" %>
      </p>
      <p class="row custom4-5 ms-2">
        <%= f.date_field :due_date, placeholder: "Pick a deadline" %>
      </p>
      <p class="ms-2">
      <%= submit_tag("Create Task") %>
      </p>
    <% end %> 
  </div>
</div>

 